<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
</table>

  <tbody></tbody>

  <h2>New book</h2>

  <%= form_with model: @book, url: '/books', method: :post do |f| %>

    <h6>Title</h6>
    <%= f.text_field :title %>

    <h6>Body</h6>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

  <% end %>

