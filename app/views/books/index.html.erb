<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to "Show", book_path(book.id) %></td>
    <td><%= link_to "Edit", update_book_path(book.id) %></td>
    <td><%= link_to "Delete", destroy_book_path(book.id), method: :delete, 'data-confirm'=>'Are you sure?' %></td>
    <td></td>
  </tr>

<% end %>
  </tbody>
</table>

  <h2>New book</h2>

  <%= form_with model: @book, url: '/books', method: :post do |f| %>

    <h6>Title</h6>
    <%= f.text_field :title %>

    <h6>Body</h6>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

  <% end %>

